#!/usr/bin/env bash
# Wrapper to run the installed Python package entrypoint from the venv created by the installer above.
# This file acts as a local "binary" that calls the virtualenv's console script.
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
VENV="$SCRIPT_DIR/.venv"
if [ -x "$VENV/bin/atlassian-jira-mcp-server" ]; then
  exec "$VENV/bin/atlassian-jira-mcp-server" "$@"
fi
if [ -x "$VENV/bin/python" ]; then
  exec "$VENV/bin/python" -m atlassian_jira_mcp_server "$@"
fi
# Fallback: try system python
exec python3 -m atlassian_jira_mcp_server "$@"
